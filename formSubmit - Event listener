<script>
var Webflow = Webflow || [];
Webflow.push(function() {  
  // unbind webflow form handling (keep this if you only want to affect specific forms)
  $(document).off('submit');

  /* Any form on the page */
  $('form').submit(function(e) {
    e.preventDefault();

    var $form = $(this); // The submitted form
    var $submit = $('[type=submit]', $form); // Submit button of form
    var buttonText = $submit.val(); // Original button text
    var buttonWaitingText = $submit.attr('data-wait'); // Waiting button text value
    var formMethod = $form.attr('method'); // Form method (where it submits to)
    var formAction = $form.attr('action'); // Form action (GET/POST)
    var formRedirect = $form.attr('data-redirect'); // Form redirect location
    var formData = $form.serializeArray(); // Form data as an array

    // Push form data to dataLayer
    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      'event': 'formSubmission',
      'formId': $form.attr('id'), // You can add more form data here if needed
      'formData': formData.reduce(function(obj, item) {
        obj[item.name] = item.value;
        return obj;
      }, {})
    });

    // Set waiting text
    if (buttonWaitingText) {
      $submit.val(buttonWaitingText); 
    }

    $.ajax(formAction, {
      data: $form.serialize(),
      method: formMethod
    })
    .done(function(res) {
      // If form redirect setting set, then use this and prevent any other actions
      if (formRedirect) { window.location = formRedirect; return; }

      $form
        .hide() // optional hiding of form
        .siblings('.w-form-done').show() // Show success
        .siblings('.w-form-fail').hide(); // Hide failure
    })
    .fail(function(res) {
      $form
        .siblings('.w-form-done').hide() // Hide success
        .siblings('.w-form-fail').show(); // show failure
    })
    .always(function() {
      // Reset text
      $submit.val(buttonText);
    });
  });
});
</script>
